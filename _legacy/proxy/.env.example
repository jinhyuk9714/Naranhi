# Required
DEEPL_AUTH_KEY=

# DeepL API endpoint
# - API Free: https://api-free.deepl.com
# - API Pro:  https://api.deepl.com
DEEPL_API_BASE=https://api-free.deepl.com

# Optional
PORT=8787
# CORS policy:
# - local: allow only local/extension origins (recommended default)
# - *: allow all origins (not recommended for exposed proxy)
# - comma-separated allowlist for hosted setup
ALLOWED_ORIGINS=local
CACHE_TTL_MS=86400000

# Optional AI sentence splitter (for YouTube ASR stabilization)
ENABLE_AI_SPLITTER=false
AI_SPLITTER_PROVIDER=openai
AI_SPLITTER_API_KEY=
AI_SPLITTER_MODEL=gpt-4o-mini
AI_SPLITTER_BASE_URL=https://api.openai.com
AI_SPLITTER_TIMEOUT_MS=5000
